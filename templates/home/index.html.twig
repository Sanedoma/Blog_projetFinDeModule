{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Blog - Accueil</h1>
    
    {% if app.user and is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_post_new') }}" class="btn btn-primary mb-4">Créer un nouveau post</a>
    {% endif %}

    {% if posts %}
        <div class="row">
            {% for post in posts %}
                <div class="col-md-6 mb-4">
                    <div class="card">
                        {% if post.picture %}
                            <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text">{{ post.content[:100] }}...</p>
                            <small class="text-muted">Par {{ post.user.firstName }} {{ post.user.lastName }}</small>
                            <br>
                            <small class="text-muted">Catégorie: {{ post.category.name }}</small>
                            <br>
                            <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-sm btn-info mt-2">Lire la suite</a>
                            
                            {% if app.user and is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-warning mt-2">Éditer</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun post disponible pour le moment.</p>
    {% endif %}
</div>
{% endblock %}
