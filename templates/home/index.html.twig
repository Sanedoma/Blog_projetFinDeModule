{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section">
    <div class="container-lg">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="hero-title">Découvrez nos articles</h1>
                <p class="hero-subtitle">Explorez une collection d'articles intéressants sur la technologie, le développement et bien plus</p>
                {% if not app.user %}
                    <div class="gap-2 d-flex justify-content-center">
                        <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Créer un compte
                        </a>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                        </a>
                    </div>
                {% else %}
                    <div class="gap-2 d-flex justify-content-center">
                        <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-lg">
                            <i class="fas fa-pen me-2"></i>Rédiger un article
                        </a>
                        <a href="{{ path('app_profile_index') }}" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-user me-2"></i>Mon profil
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

<div class="container-lg my-5">
    <div class="row">
        <div class="col-12">
            <!-- Filters Section -->
            <div class="card filter-card mb-4">
                <div class="card-header d-flex align-items-center gap-2">
                    <i class="fas fa-filter"></i>
                    <h5 class="mb-0">Filtrer les articles</h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="{{ path('app_home') }}" class="row g-3">
                        <div class="col-md-3">
                            <label for="category" class="form-label"><i class="fas fa-tag"></i> Catégorie</label>
                            <select class="form-select" id="category" name="category">
                                <option value="">-- Toutes les catégories --</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}" {% if selectedCategory == category.id %}selected{% endif %}>{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="author" class="form-label"><i class="fas fa-user"></i> Auteur</label>
                            <select class="form-select" id="author" name="author">
                                <option value="">-- Tous les auteurs --</option>
                                {% for author in authors %}
                                    <option value="{{ author.id }}" {% if selectedAuthor == author.id %}selected{% endif %}>{{ author.firstName }} {{ author.lastName }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="date_from" class="form-label"><i class="fas fa-calendar-alt"></i> Du</label>
                            <input type="date" class="form-control" id="date_from" name="date_from" value="{{ selectedDateFrom }}">
                        </div>
                        <div class="col-md-2">
                            <label for="date_to" class="form-label"><i class="fas fa-calendar-alt"></i> Au</label>
                            <input type="date" class="form-control" id="date_to" name="date_to" value="{{ selectedDateTo }}">
                        </div>
                        <div class="col-md-2 d-flex gap-2 align-items-end">
                            <button type="submit" class="btn btn-primary flex-grow-1">
                                <i class="fas fa-search"></i> Filtrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Posts Grid -->
            {% if pagination.items %}
                {% if searchQuery %}
                    <div class="alert alert-info mb-4">
                        <i class="fas fa-search me-2"></i>
                        Résultats pour: <strong>"{{ searchQuery }}"</strong>
                        <a href="{{ path('app_home') }}" class="ms-3"><i class="fas fa-times"></i> Effacer la recherche</a>
                    </div>
                {% endif %}
                <div class="row">
                    {% for post in pagination %}
                        <div class="col-lg-6 mb-4">
                            <div class="card post-card h-100 shadow-sm">
                                {% if post.picture %}
                                    <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 250px; object-fit: cover;">
                                {% endif %}
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex align-items-start justify-content-between mb-2">
                                        <h5 class="card-title flex-grow-1">{{ post.title }}</h5>
                                        {% if post.featured %}<span class="badge bg-warning text-dark"><i class="fas fa-star"></i> En vedette</span>{% endif %}
                                    </div>
                                    <p class="card-text text-muted flex-grow-1">{{ post.content|slice(0, 100) }}...</p>
                                    <div class="d-flex flex-wrap gap-2 mb-3">
                                        <a href="{{ path('app_home', {'author': post.user.id}) }}" class="badge badge-author text-decoration-none">
                                            <i class="fas fa-user"></i> {{ post.user.firstName }} {{ post.user.lastName }}
                                        </a>
                                        <a href="{{ path('app_home', {'category': post.category.id}) }}" class="badge badge-category text-decoration-none">
                                            <i class="fas fa-tag"></i> {{ post.category.name }}
                                        </a>
                                    </div>
                                    <small class="text-muted mb-3 d-flex gap-3">
                                        <span><i class="fas fa-calendar"></i> {{ post.publishAt|date('d/m/Y') }}</span>
                                        <span><i class="fas fa-comments"></i> {{ post.comments|length }} com.</span>
                                    </small>
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-sm btn-primary flex-grow-1">
                                            <i class="fas fa-eye"></i> Lire
                                        </a>
                                        {% if app.user and (post.user === app.user or is_granted('ROLE_ADMIN')) %}
                                            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-warning" title="Modifier">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <!-- Pagination Controls -->
                {% if pagination.pageCount > 1 %}
                    <nav aria-label="Page navigation" class="mt-5">
                        <ul class="pagination justify-content-center">
                            {# Previous page #}
                            {% if pagination.currentPageNumber > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_home', query_params({'page': 1})) }}">
                                        <i class="fas fa-chevron-left"></i> Première
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_home', query_params({'page': pagination.currentPageNumber - 1})) }}">
                                        <i class="fas fa-arrow-left"></i> Précédent
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link"><i class="fas fa-chevron-left"></i> Première</span>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link"><i class="fas fa-arrow-left"></i> Précédent</span>
                                </li>
                            {% endif %}

                            {# Page numbers #}
                            {% for page in 1..pagination.pageCount %}
                                {% if page == pagination.currentPageNumber %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ page }}</span>
                                    </li>
                                {% else %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_home', query_params({'page': page})) }}">{{ page }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}

                            {# Next page #}
                            {% if pagination.currentPageNumber < pagination.pageCount %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_home', query_params({'page': pagination.currentPageNumber + 1})) }}">
                                        Suivant <i class="fas fa-arrow-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_home', query_params({'page': pagination.pageCount})) }}">
                                        Dernière <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Suivant <i class="fas fa-arrow-right"></i></span>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">Dernière <i class="fas fa-chevron-right"></i></span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>

                    {# Pagination info #}
                    <div class="text-center text-muted mt-3">
                        <small>Page <strong>{{ pagination.currentPageNumber }}</strong> sur <strong>{{ pagination.pageCount }}</strong> - <strong>{{ pagination.totalItemCount }}</strong> article(s) au total</small>
                    </div>
                {% endif %}
            {% else %}
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-search" style="font-size: 2rem; margin-bottom: 1rem; display: block;"></i>
                    <p class="mb-0">Aucun article ne correspond à vos critères de filtre.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
