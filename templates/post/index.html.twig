{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
<!-- Page Header -->
<section class="page-header">
    <div class="container-lg">
        <div class="row align-items-center justify-content-between">
            <div class="col-auto">
                <h1 class="page-title">
                    <i class="fas fa-book me-3"></i>Tous les articles
                </h1>
                <p class="page-subtitle">Explorez l'intégralité de notre bibliothèque d'articles</p>
            </div>
            {% if is_granted('ROLE_USER') %}
                <div class="col-auto">
                    <a href="{{ path('app_post_new') }}" class="btn btn-primary btn-lg">
                        <i class="fas fa-pen me-2"></i>Rédiger un article
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</section>

<div class="container-lg my-5">
    <div class="row">
        <div class="col-12">
            {% if pagination.items|length > 0 %}
                <div class="row">
                    {% for post in pagination %}
                        <div class="col-lg-6 col-xl-4 mb-4">
                            <div class="card post-card h-100 shadow-sm">
                                {% if post.picture %}
                                    <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 200px; object-fit: cover;">
                                {% else %}
                                    <div class="post-placeholder d-flex align-items-center justify-content-center" style="height: 200px; background: linear-gradient(135deg, var(--macos-blue) 0%, var(--macos-blue-light) 100%);">
                                        <i class="fas fa-newspaper text-white" style="font-size: 3rem; opacity: 0.3;"></i>
                                    </div>
                                {% endif %}
                                <div class="card-body d-flex flex-column">
                                    <div class="d-flex align-items-start justify-content-between mb-2">
                                        <h5 class="card-title flex-grow-1">{{ post.title }}</h5>
                                        {% if post.featured %}
                                            <span class="badge bg-warning text-dark" style="white-space: nowrap;">
                                                <i class="fas fa-star"></i> En vedette
                                            </span>
                                        {% endif %}
                                    </div>
                                    <p class="card-text text-muted flex-grow-1 small">{{ post.content|slice(0, 80) }}{% if post.content|length > 80 %}...{% endif %}</p>
                                    
                                    <div class="d-flex flex-wrap gap-2 mb-3">
                                        <span class="badge badge-category text-decoration-none">
                                            <i class="fas fa-tag"></i> {{ post.category.name }}
                                        </span>
                                    </div>

                                    <small class="text-muted d-block mb-3">
                                        <span class="d-flex align-items-center gap-2">
                                            <i class="fas fa-user"></i>
                                            {{ post.user.firstName }} {{ post.user.lastName }}
                                        </span>
                                    </small>

                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> {{ post.publishAt|date('d/m/Y') }}
                                        </small>
                                        <small class="text-muted">
                                            <i class="fas fa-comments"></i> {{ post.comments|length }}
                                        </small>
                                    </div>

                                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-primary btn-sm mt-3 w-100">
                                        <i class="fas fa-eye"></i> Lire l'article
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {% if pagination.pageCount > 1 %}
                    <nav aria-label="Page navigation" class="mt-5">
                        <ul class="pagination justify-content-center">
                            {# Previous page #}
                            {% if pagination.currentPageNumber > 1 %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_post_index', {'page': 1}) }}">
                                        <i class="fas fa-chevron-left"></i> Première
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_post_index', {'page': pagination.currentPageNumber - 1}) }}">
                                        <i class="fas fa-arrow-left"></i> Précédent
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link"><i class="fas fa-chevron-left"></i> Première</span>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link"><i class="fas fa-arrow-left"></i> Précédent</span>
                                </li>
                            {% endif %}

                            {# Page numbers #}
                            {% for page in 1..pagination.pageCount %}
                                {% if page == pagination.currentPageNumber %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ page }}</span>
                                    </li>
                                {% else %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('app_post_index', {'page': page}) }}">{{ page }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}

                            {# Next page #}
                            {% if pagination.currentPageNumber < pagination.pageCount %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_post_index', {'page': pagination.currentPageNumber + 1}) }}">
                                        Suivant <i class="fas fa-arrow-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="{{ path('app_post_index', {'page': pagination.pageCount}) }}">
                                        Dernière <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            {% else %}
                                <li class="page-item disabled">
                                    <span class="page-link">Suivant <i class="fas fa-arrow-right"></i></span>
                                </li>
                                <li class="page-item disabled">
                                    <span class="page-link">Dernière <i class="fas fa-chevron-right"></i></span>
                                </li>
                            {% endif %}
                        </ul>
                    </nav>

                    {# Pagination info #}
                    <div class="text-center text-muted mt-3">
                        <small>Page <strong>{{ pagination.currentPageNumber }}</strong> sur <strong>{{ pagination.pageCount }}</strong> - <strong>{{ pagination.totalItemCount }}</strong> article(s) au total</small>
                    </div>
                {% endif %}

                <div class="text-center text-muted mt-5">
                    <p><strong>{{ pagination.totalItemCount }}</strong> article(s) trouvé(s)</p>
                </div>
            {% else %}
                <div class="alert alert-info text-center py-5">
                    <i class="fas fa-inbox" style="font-size: 2rem; margin-bottom: 1rem; display: block;"></i>
                    <p class="mb-0">Aucun article disponible pour le moment.</p>
                    {% if is_granted('ROLE_USER') %}
                        <a href="{{ path('app_post_new') }}" class="btn btn-primary mt-3">
                            <i class="fas fa-pen me-2"></i>Soyez le premier à en rédiger un !
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
