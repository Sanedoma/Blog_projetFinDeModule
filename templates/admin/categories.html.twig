{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
    <div class="container-lg mt-5 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-folder"></i> Gestion des Catégories</h1>
            <a href="{{ path('app_category_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Nouvelle Catégorie
            </a>
        </div>

        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-tag"></i> Nom</th>
                            <th><i class="fas fa-align-left"></i> Description</th>
                            <th><i class="fas fa-file-alt"></i> Articles</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>
                                    <strong>{{ category.name }}</strong>
                                </td>
                                <td>
                                    <span class="text-muted">{{ category.description|slice(0, 50) }}{% if category.description|length > 50 %}...{% endif %}</span>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="fas fa-file"></i> {{ category.posts|length }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" 
                                       class="btn btn-sm btn-outline-primary" 
                                       title="Modifier">
                                        <i class="fas fa-edit"></i> Éditer
                                    </a>
                                    <form method="POST" 
                                          action="{{ path('app_category_delete', {'id': category.id}) }}" 
                                          style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button type="submit" 
                                                class="btn btn-sm btn-outline-danger" 
                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')"
                                                title="Supprimer">
                                            <i class="fas fa-trash"></i> Supprimer
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox"></i> Aucune catégorie
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Dashboard
            </a>
        </div>
    </div>
{% endblock %}
