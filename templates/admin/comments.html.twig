{% extends 'base.html.twig' %}

{% block title %}Gestion des Commentaires{% endblock %}

{% block body %}
    <div class="container-lg mt-5 mb-5">
        <h1 class="mb-4"><i class="fas fa-comments"></i> Gestion des Commentaires</h1>

        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-newspaper"></i> Article</th>
                            <th><i class="fas fa-user"></i> Auteur</th>
                            <th><i class="fas fa-align-left"></i> Contenu</th>
                            <th><i class="fas fa-calendar"></i> Date</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for comment in comments %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_post_show', {'id': comment.post.id}) }}" class="text-decoration-none">
                                        <strong>{{ comment.post.title|slice(0, 35) }}{% if comment.post.title|length > 35 %}...{% endif %}</strong>
                                    </a>
                                </td>
                                <td>
                                    <a href="{{ path('app_profile_show', {'id': comment.user.id}) }}" class="text-decoration-none">
                                        {{ comment.user.firstName }} {{ comment.user.lastName }}
                                    </a>
                                </td>
                                <td>
                                    <span class="text-muted">{{ comment.content|slice(0, 50) }}{% if comment.content|length > 50 %}...{% endif %}</span>
                                </td>
                                <td>
                                    <small class="text-muted">{{ comment.createAt|date('d/m/Y H:i') }}</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_post_show', {'id': comment.post.id}) }}" 
                                           class="btn btn-outline-info"
                                           title="Voir l'article">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <a href="{{ path('app_comment_edit', {'postId': comment.post.id, 'id': comment.id}) }}" 
                                           class="btn btn-outline-primary"
                                           title="Éditer">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="POST" 
                                              action="{{ path('app_comment_delete', {'postId': comment.post.id, 'id': comment.id}) }}" 
                                              style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                            <button type="submit" 
                                                    class="btn btn-outline-danger"
                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?')"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox"></i> Aucun commentaire
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Dashboard
            </a>
        </div>
    </div>
{% endblock %}
