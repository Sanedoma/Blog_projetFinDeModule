{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <h1 class="mb-4">Gestion des Utilisateurs</h1>

        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Rôle</th>
                            <th>Articles</th>
                            <th>Commentaires</th>
                            <th>Date d'inscription</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td><strong>{{ user.firstName }} {{ user.lastName }}</strong></td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% if 'ROLE_ADMIN' in user.roles %}
                                        <span class="badge bg-danger">Admin</span>
                                    {% else %}
                                        <span class="badge bg-primary">Utilisateur</span>
                                    {% endif %}
                                </td>
                                <td><span class="badge bg-info">{{ user.posts|length }}</span></td>
                                <td><span class="badge bg-success">{{ user.comments|length }}</span></td>
                                <td>{{ user.createAt ? user.createAt|date('d/m/Y') : 'N/A' }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">Aucun utilisateur</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">← Dashboard</a>
        </div>
    </div>
{% endblock %}
