{% extends 'base.html.twig' %}

{% block title %}Gestion des Articles{% endblock %}

{% block body %}
    <div class="container-lg mt-5 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-newspaper"></i> Gestion des Articles</h1>
            <a href="{{ path('app_post_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i> Nouvel Article
            </a>
        </div>

        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-heading"></i> Titre</th>
                            <th><i class="fas fa-user"></i> Auteur</th>
                            <th><i class="fas fa-folder"></i> Catégorie</th>
                            <th><i class="fas fa-comments"></i> Commentaires</th>
                            <th><i class="fas fa-calendar"></i> Publication</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>
                                    <strong>{{ post.title|slice(0, 40) }}{% if post.title|length > 40 %}...{% endif %}</strong>
                                </td>
                                <td>
                                    <a href="{{ path('app_profile_show', {'id': post.user.id}) }}" class="text-decoration-none">
                                        {{ post.user.firstName }} {{ post.user.lastName }}
                                    </a>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-tag"></i> {{ post.category.name }}
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-info">
                                        <i class="fas fa-comment"></i> {{ post.comments|length }}
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">{{ post.publishAt|date('d/m/Y H:i') }}</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_post_show', {'id': post.id}) }}" 
                                           class="btn btn-outline-info" 
                                           title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_post_edit', {'id': post.id}) }}" 
                                           class="btn btn-outline-primary" 
                                           title="Éditer">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="POST" 
                                              action="{{ path('app_post_delete', {'id': post.id}) }}" 
                                              style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                                            <button type="submit" 
                                                    class="btn btn-outline-danger" 
                                                    onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?')"
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox"></i> Aucun article
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Dashboard
            </a>
        </div>
    </div>
{% endblock %}
