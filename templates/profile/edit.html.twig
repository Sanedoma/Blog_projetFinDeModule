{% extends 'base.html.twig' %}

{% block title %}Éditer mon profil{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Modifier mon profil</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Photo de profil actuelle</label>
                        {% if user.profilePicture %}
                            <div class="mb-2">
                                <img src="{{ asset('uploads/profiles/' ~ user.profilePicture) }}" 
                                     alt="Photo de profil" 
                                     class="img-thumbnail" 
                                     style="max-width: 200px; height: 200px; object-fit: cover;">
                            </div>
                        {% else %}
                            <p class="text-muted">Aucune photo de profil</p>
                        {% endif %}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.profilePicture) }}
                        <small class="form-text text-muted">Formats acceptés : JPEG, PNG, GIF, WebP. Taille maximale : 5MB</small>
                    </div>

                    <hr>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer les modifications
                        </button>
                        <a href="{{ path('app_profile_index') }}" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
